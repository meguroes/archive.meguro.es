*
  margin 0
  padding 0

body
  background-attachment fixed
  background-color color-background
  background-image url(images/logo_squirrel.png) 
  background-position right bottom
  background-repeat no-repeat
  font 300 14px font-main
  background-size 300px
  text-shadow 0 0 1px transparent
  +sp()
      background-position center bottom

h1
  font-size 2em

h2
  font-size 1.6em

h3
  font-size 1.3em

a
  color color-main01
  text-decoration none

strong
  font-weight bold

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  margin 0 auto
  position relative
  width 1000px
  z-index 0
  +sp()
    width: 98%
